	shortjournal = {{SIAM} Rev.},
	author = {Clauset, Aaron and Shalizi, Cosma Rohilla and Newman, M. E. J.},
	urldate = {2020-07-15},
	date = {2009-11-04},
	langid = {english},
	eprinttype = {arxiv},
	eprint = {0706.1062},
	keywords = {Condensed Matter - Disordered Systems and Neural Networks, Physics - Data Analysis, Statistics and Probability, Statistics - Applications, Statistics - Methodology},
	file = {Clauset et al. - 2009 - Power-law distributions in empirical data.pdf:/home/tobias/Zotero/storage/27TS3XX5/Clauset et al. - 2009 - Power-law distributions in empirical data.pdf:application/pdf}
