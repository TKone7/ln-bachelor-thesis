	note = {version: 1},
	keywords = {Computer Science - Cryptography and Security},
	file = {arXiv Fulltext PDF:/home/tobias/Zotero/storage/L36G6NTA/Tikhomirov et al. - 2020 - Probing Channel Balances in the Lightning Network.pdf:application/pdf;arXiv.org Snapshot:/home/tobias/Zotero/storage/VC46AYMZ/2004.html:text/html}
